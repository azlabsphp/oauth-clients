{
    "name": "drewlabs/authorized-clients",
    "description": "Provides abstractions for working with server authorized clients",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "http",
        "authorized server clients",
        "clients scopes"
    ],
    "autoload": {
        "psr-4": {
            "Drewlabs\\AuthorizedClients\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drewlabs\\AuthorizedClients\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "azandrew-sidoine",
            "email": "asmyns.platonnas29@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.0|^8.0",
        "psr/http-client": "^1.0",
        "nyholm/psr7": "^1.5"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "require-dev": {
        "phpunit/phpunit": ">=6.0",
        "nyholm/psr7-server": "^1.0"
    },
    "suggest": {
        "nyholm/psr7": "Required to create psr7 requests"
    }
}